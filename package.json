{
  "name": "angular2gridster",
  "version": "1.2.1",
  "license": "MIT",
  "main": "./dist/index.js",
  "scripts": {
    "install-demo": "npm install --prefix ./demo",
    "link-demo": "ln -s $PWD/src/ $PWD/demo/src/app/gridster",
    "serve-demo": "npm start --prefix ./demo",
    "lint": "tslint src/**/*.ts && npm run lint --prefix ./demo",
    "test": "karma start",
    "build": "npm run link-demo && echo 'Building...' && ./node_modules/.bin/ngc -p tsconfig.json",
    "release-major": "standard-version -- -r major",
    "release-minor": "standard-version -- -r minor",
    "release-fix": "standard-version -- -r patch",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/swiety85/angular2gridster.git"
  },
  "author": {
    "name": "Damian Wajdlich",
    "email": "swiety85@gmail.com"
  },
  "keywords": [
    "gridster",
    "grid",
    "angular",
    "angular2",
    "dashboard",
    "ngx",
    "drag&drop",
    "widgets"
  ],
  "bugs": {
    "url": "https://github.com/swiety85/angular2gridster/issues"
  },
  "homepage": "https://github.com/swiety85/angular2gridster#readme",
  "typings": "./dist/index.d.ts",
  "devDependencies": {
    "@angular/common": "^2.4.8 || ^4.0.0",
    "@angular/compiler": "^4.2.6",
    "@angular/compiler-cli": "^4.2.6",
    "@angular/core": "^2.4.8 || ^4.0.0",
    "@angular/language-service": "^4.2.6",
    "@types/node": "~6.0.60",
    "codelyzer": "^3.0.1",
    "reflect-metadata": "~0.1.9",
    "rxjs": "^5.1.0",
    "standard-version": "^4.2.0",
    "ts-loader": "^2.0.1",
    "ts-node": "~3.0.4",
    "tslint": "~5.3.2",
    "typescript": "~2.3.3",
    "zone.js": "~0.7.2 || ~0.8.5"
  }
}
